# DACH Marketplace - Environment Variables
# Copy this file to .env and fill in your values

# ===================
# Server Configuration
# ===================
SERVER_HOST=127.0.0.1
SERVER_PORT=8080
RUST_LOG=debug

# ===================
# Database (Supabase PostgreSQL)
# ===================
# Get these from: Supabase Dashboard → Settings → Database → Connection string
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-eu-central-1.pooler.supabase.com:6543/postgres

# ===================
# JWT Authentication
# ===================
# Generate with: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_EXPIRY_HOURS=24
JWT_REFRESH_EXPIRY_DAYS=30

# ===================
# Stripe Payments
# ===================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ===================
# Search (Meilisearch Cloud - Optional)
# ===================
# Get from: https://cloud.meilisearch.com/
# Leave empty to disable search in development
MEILISEARCH_URL=
MEILISEARCH_API_KEY=

# ===================
# Email (Optional for dev)
# ===================
# Leave empty to log emails to console in development
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@dach-marketplace.com
FROM_NAME=DACH Marketplace

# ===================
# File Storage (Local for dev)
# ===================
# For production, use S3-compatible storage
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./uploads

# S3 settings (for production)
S3_BUCKET=
S3_REGION=eu-central-1
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_ENDPOINT=

# ===================
# Frontend URL
# ===================
FRONTEND_URL=http://localhost:5173

# ===================
# CORS Configuration
# ===================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ===================
# Rate Limiting
# ===================
RATE_LIMIT_REQUESTS_PER_SECOND=10
RATE_LIMIT_BURST=50

# ===================
# Environment
# ===================
ENVIRONMENT=development
