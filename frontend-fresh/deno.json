{
  "name": "@dach/marketplace",
  "version": "1.0.0",
  "nodeModulesDir": "auto",
  "imports": {
    "@/": "./",
    "fresh": "jsr:@fresh/core@^2.2.0",
    "@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.8",
    "tailwindcss": "npm:tailwindcss@^4.1.17",
    "vite": "npm:vite@^7.2.6",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.8",
    "@preact/signals": "npm:@preact/signals@^1.3.1",
    "preact": "npm:preact@^10.24.3",
    "preact/hooks": "npm:preact@^10.24.3/hooks",
    "preact/compat": "npm:preact@^10.24.3/compat",
    "react": "npm:preact@^10.24.3/compat",
    "react-dom": "npm:preact@^10.24.3/compat",
    "@tanstack/react-query": "npm:@tanstack/react-query@^5.90.11",
    "zustand": "npm:zustand@^5.0.8",
    "zustand/middleware": "npm:zustand@^5.0.8/middleware",
    "clsx": "npm:clsx@^2.1.1",
    "tailwind-merge": "npm:tailwind-merge@^3.4.0",
    "date-fns": "npm:date-fns@^4.1.0",
    "lucide-preact": "npm:lucide-preact@^0.460.0",
    "zod": "npm:zod@^3.24.1",
    "@hookform/resolvers": "npm:@hookform/resolvers@^5.2.2",
    "i18next": "npm:i18next@^25.6.3",
    "i18next-browser-languagedetector": "npm:i18next-browser-languagedetector@^8.2.0"
  },
  "compilerOptions": {
    "lib": ["dom", "dom.asynciterable", "dom.iterable", "deno.ns"],
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "tasks": {
    "dev": "vite",
    "build": "vite build",
    "preview": "deno serve -A _fresh/server.js",
    "check": "deno check main.ts vite.config.ts"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}

